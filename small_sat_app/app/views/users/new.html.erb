<div class="container">
    <div class="row">
        <div class="col-md-7 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1>Signup</h1>
                </div>
                <div class="panel-body">
                    <form class="form-horizontal" align="center">
                        <%= form_for(@user) do |f| %>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="name">Name:</label>
                            <div class="col-sm-10">
                                <input type="name" class="form-control" id="name" placeholder="Enter name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="email">Email:</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="email" placeholder="Enter email">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="pwd">Password:</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" id="pwd" placeholder="Enter password">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="pwd_confirm">Confirmation:</label>
                            <div class="col-sm-10">
                                <input type="password_confirmation" class="form-control" id="pwd_confirm" placeholder="Enter password">
                            </div>
                        </div>
                        <%= f.submit "Create my account", class: "btn btn-primary" %>
                        <% end %>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

